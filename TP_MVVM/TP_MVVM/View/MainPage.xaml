<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:TP_MVVM.View.Custom"
             x:Class="TP_MVVM.View.MainPage">

    <Grid RowDefinitions="Auto, *">
        <local:CustomHeader HeightRequest="50" VerticalOptions="Start" Padding="10, 0"/>
        <ScrollView Grid.Row="1">
            <VerticalStackLayout
                Spacing="25"
                Padding="20,0"
                VerticalOptions="Start">

                <Label
                    Grid.Row="1"
                    Text="Mes Livres"
                    FontSize="40"
                    HorizontalOptions="Start"
                    FontAttributes="Bold"/>

                <ListView x:Name="listView" Grid.Row="2">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <StackLayout Orientation="Horizontal">

                                    <Image Source="{Binding IconPath}" WidthRequest="24" HeightRequest="24" VerticalOptions="CenterAndExpand" Margin="0,0,15,0" />

                                    <Label Text="{Binding Text}" FontSize="15" VerticalOptions="CenterAndExpand" />

                                    <Label Text="{Binding CountBook}" TextColor="LightGrey" FontSize="15" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" />

                                    <Image Source="chevron_right.png" Style="{StaticResource ColoredIconStyle}" VerticalOptions="CenterAndExpand" Margin="5,0,0,0" />

                                </StackLayout>
                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>

                </ListView>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>

</ContentPage>
