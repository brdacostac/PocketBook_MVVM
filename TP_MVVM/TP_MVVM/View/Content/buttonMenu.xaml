<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="TP_MVVM.View.Content.buttonMenu"
             x:Name="this">


    <StackLayout BindingContext="{x:Reference this}" Orientation="Horizontal" >
        <StackLayout.GestureRecognizers>
            <TapGestureRecognizer Command="{Binding CommandName}"></TapGestureRecognizer>
        </StackLayout.GestureRecognizers>

        <Image Source="{Binding IconPath, Source={x:Reference this}}" WidthRequest="24"  HeightRequest="24" VerticalOptions="CenterAndExpand" Margin="20,0,15,0" />

        <Label Text="{Binding Title, Source={x:Reference this}}" Style="{StaticResource CustomLabelStyle}" FontSize="15" VerticalOptions="CenterAndExpand" />

        <Label Text="{Binding CountBook, Source={x:Reference this}}" Style="{StaticResource CustomLabelStyle}" TextColor="LightGrey" FontSize="15" VerticalOptions="CenterAndExpand" HorizontalOptions="EndAndExpand" />

        <Image Source="chevron_right.png" VerticalOptions="CenterAndExpand" HorizontalOptions="End" Margin="5,0,10,0" WidthRequest="15">
            <Image.Behaviors>
                <toolkit:IconTintColorBehavior TintColor="LightGray" />
            </Image.Behaviors>
        </Image>

    </StackLayout>
</ContentView>
